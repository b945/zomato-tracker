{
    "manifest_version": 3,
    "name": "Food Stats",
    "version": "1.2",
    "description": "Calculate your total lifetime spending on Zomato with a beautiful dashboard.",
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "*://*.zomato.com/*"
    ],
    "action": {
        "default_title": "Open Zomato Dashboard",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.zomato.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}